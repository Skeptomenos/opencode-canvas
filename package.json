{
  "name": "opencode-canvas",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "canvas": "src/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "typecheck": "bun x tsc --noEmit",
    "test": "bun test",
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "format": "bun x prettier --write .",
    "format:check": "bun x prettier --check .",
    "lint": "bun run format:check && bun run typecheck"
  },
  "dependencies": {
    "@opentui/core": "0.1.72",
    "@opentui/solid": "0.1.72",
    "commander": "^14.0.0",
    "solid-js": "1.9.9"
  },
  "devDependencies": {
    "@tsconfig/bun": "^1.0.7",
    "@types/bun": "1.1.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0"
  }
}
